# Rhokell implementation for check_if_list_of_numbers_is_sorted
# This program checks if a list of numbers is sorted in ascending or descending order.

# Define the function check_if_list_of_numbers_is_sorted
check_if_list_of_numbers_is_sorted = \numbers ->
    let is_ascending = \nums -> all (\(x, y) -> x <= y) (zip nums (tail nums))
    in let is_descending = \nums -> all (\(x, y) -> x >= y) (zip nums (tail nums))
    in is_ascending numbers || is_descending numbers
